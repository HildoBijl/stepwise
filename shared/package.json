{
	"name": "step-wise",
	"version": "1.0.0",
	"scripts": {
		"test": "jest .*\\.test\\.js",
		"test:watch": "jest --watch .*\\.test\\.js",
		"watch:settings": "cd packages/settings && tsc --watch",
		"watch:utils": "cd packages/utils && tsc --watch",
		"watch": "concurrently \"npm run watch:settings\" \"npm run watch:utils\""
	},
	"dependencies": {
		"@step-wise/settings": "file:packages/settings/dist",
		"@step-wise/utils": "file:packages/utils/dist"
	},
	"devDependencies": {
		"concurrently": "^9.2.1",
		"jest": "^29.7.0",
		"typescript": "^5.9.3"
	}
}
