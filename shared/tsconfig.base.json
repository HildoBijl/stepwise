{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@step-wise/*": ["packages/*/src"]
    },
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}